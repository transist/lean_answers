<%= render :partial => '/projects/experiments' %>

<% content_for :skinny_sidebar do %>
<%= render :partial => '/shared/project_image', :locals => {:link => url_for(@project)} %>
<div class='row'>
  <div class='page-header'><h2 class='fake_margin'><%= link_to @project.name, @project %></h2></div>
</div>
<div class='column'>
  <% if @project.description != '' %>
  <h3>Project Description</h3>
  <p>
    <%= @project.description %>
    <br/><br/>

    <br/>
  </p>
  <% end %>
  <%= link_to 'Edit', edit_project_path(@project), :class => 'btn btn-small'%><br/><br/>
</div>
<% end %>