<div class='page-header'><h1>Edit Survey</h1></div>
<%= form_for(@survey) do |f| %>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="name">Name</label>
      <div class="controls">
        <%= f.text_field :name, :placeholder => 'Name', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="name">Description</label>
      <div class="controls">
        <%= f.text_area :description, :placeholder => 'Description', :class => 'span6',:rows => 5 %>
      </div>
    </div>
  </fieldset>
  <div class='actions'>
    <%= f.submit 'Update', :class => 'btn btn-large btn-primary' %> <%= link_to 'Cancel', surveys_url,  :class => 'btn btn-large' %>
  </div>  
<% end %>
