<div class="btn-toolbar pull-right">
  <div class='btn-group'>
    <%= link_to 'View', project_assumption_path(project, assumption), :class => 'btn btn-small'%>
  </div>
  <div class="btn-group">
    <%= link_to 'Current', change_project_assumption_path(project, assumption, 'current'), :class => 'btn btn-small', :data => { :confirm => 'Are you sure?' } %>
    <%= link_to 'NA', change_project_assumption_path(project, assumption, 'not_applicable'), :class => 'btn btn-small pull-right', :data => { :confirm => 'Are you sure?' } %>
    <%= link_to 'Accept', change_project_assumption_path(project, assumption, 'accepted'), :class => 'btn btn-small pull-right', :data => { :confirm => 'Are you sure?' } %>
    <%= link_to 'Reject', change_project_assumption_path(project, assumption, 'rejected'), :class => 'btn btn-small pull-right', :data => { :confirm => 'Are you sure?' } %>
    
  </div>
  <div class="btn-group">
    <%= link_to 'Edit', edit_project_assumption_path(project, assumption), :class => 'btn btn-small pull-right' %>
    <%= link_to 'Delete', project_assumption_path(project, assumption), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-small pull-right' %>
  </div>
</div>