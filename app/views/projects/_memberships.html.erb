<div class='row'>
  <div class='page-header'>
    <h3>Members<span class="btn-group pull-right"><%= link_to 'New Member', new_project_membership_path(@project), :class => 'btn' %></span></h3>
  </div>
  <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#current_members" data-toggle="tab">Current</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="current_members">
        <% if @project.memberships.size > 0 %>
        <table class='table table-bordered'>
          <% @project.memberships.each do |a| %>
          <%= render :partial => '/projects/member_row', :locals => {:membership => a}  %>
          <% end %>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>