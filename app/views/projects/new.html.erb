<div class='page-header'><h1>New Project</h1></div>
<%= form_for(@project) do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => 'Name', :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :placeholder => 'Description', :class => 'span6',:rows => 5 %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :tag_list, 'Tags', class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :tag_list, :placeholder => 'Tags', :class => 'input-xlarge' %>
      </div>
    </div>
  </fieldset>
  <div class='actions'>
    <%= f.submit 'Create', :class => 'btn btn-large btn-primary' %> <%= link_to 'Cancel', projects_url,  :class => 'btn btn-large' %>
  </div>
  
  
<% end %>
