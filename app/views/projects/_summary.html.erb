<div class='row'>
  <div class='page-header'>
    <h3>Summary</h3>
  </div>
  <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#current" data-toggle="tab">Summary</a></li>
      <li><a href="#experimeents" data-toggle="tab">Experiments</a></li>
      <li><a href="#hypotheses" data-toggle="tab">Hypotheses</a></li>
      <li><a href="#assumptions" data-toggle="tab">Assumptions</a></li>
      <li><a href="#research" data-toggle="tab">Research</a></li>
      <li><%= link_to "Documents", '/documents' %></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="current">
        <% if @project.current_assumptions.size > 0 %>
        <table class='table table-bordered'>
          <%= render :partial => 'hypothesis_row', :locals => {:hypothesis => @project.current_customer, :hypothesis_type => 'customer'} %>
        <% else %>
          <%= render :partial => 'no_assumption', :locals => {:project => @project }%>
        <% end %>
      </div>
      
      <div class="tab-pane" id="na">
        <% if @project.current_hypotheses.size > 0 %>
        <table class='table table-bordered'>
          <%= render :partial => 'hypothesis_row', :locals => {:hypothesis => @project.current_customer, :hypothesis_type => 'customer'} %>
        </table>
        <% else %>
          <%= render :partial => 'no_assumption', :locals => {:project => @project }%>
          na
        <% end %>
      </div>
      <div class="tab-pane" id="all_assumptions">
        <%if @project.current_hypotheses.size > 0%>
        <table class='table table-bordered'>
          <%= render :partial => 'hypothesis_row', :locals => {:hypothesis => @project.current_customer, :hypothesis_type => 'customer'} %>
        </table>
        <% else %>
          <%= render :partial => 'no_assumption', :locals => {:project => @project }%>
          all
        <% end %>
      </div>
    </div>
  </div>
</div>