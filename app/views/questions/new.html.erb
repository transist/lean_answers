<div class='page-header'><h1>New Question</h1></div>
<%= form_for([@survey, @question]) do |f| %>
  <div class="control-group">
    <label class="control-label" for="name">Question</label>
    <div class="controls">
      <%= f.text_area :question, :class => 'span6', :rows => 5 %>
    </div>
  </div>
  <div class='actions'>
    <%= f.submit 'Create', :class => 'btn btn-large btn-primary' %> <%= link_to 'Cancel', survey_url(@survey),  :class => 'btn btn-large' %>
  </div>
<% end %>