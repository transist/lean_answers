<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <% if @project && !@project.new_record? %>
        <%= link_to 'lean answers', @project, :class => 'brand' %>
      <% else %>
      <a class="brand" href="/">lean answers</a>
      <% end %>
      <% if user_signed_in? %>
      <ul class="nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Projects <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="/">View All</a></li>
             
            <% unless current_users_projects.size == 0%>
              <li class="divider"></li>
              <% current_users_projects.each do |p| %>
                <li><%=link_to p.name, p %></li>
              <% end %>
            <% end %>
            <li class="divider"></li>
            <li><a href="/projects/new"><b>+</b> New Project</a></li>
            
          </ul>
        </li>
        <% if @project && !@project.new_record? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= @project.name %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Summary', project_path(@project)%></li>
            <li><%= link_to 'Tasks', project_tasks_path(@project)%></li>
            <li class="divider"></li>
            <li><%= link_to 'Scorecards', project_scorecards_path(@project)%></li>
            <li><%= link_to 'Hypotheses', project_hypotheses_path(@project)%></li>
            <li><%= link_to 'Assumptions', project_assumptions_path(@project)%></li>
            <li><%= link_to 'Experiments', project_experiments_path(@project)%></li>      
            <li><%= link_to 'Documents', project_documents_path(@project)%></li>
            <li class="divider"></li>
            <li><%= link_to 'Members', project_memberships_path(@project)%></li>
            <li class="divider"></li>
            <li><%= link_to 'Edit Description', edit_project_path(@project)%></li>
          </ul>
        </li>
        <% end %>
      </ul>
      <% end %>
      <ul class="nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= (user_signed_in? ? 'Account' : 'Login')%> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% if user_signed_in? %>
              <li><a href="/settings">Settings</a></li>
              <% if current_user.admin? %>
              <li><a href="/admin">Administration</a></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete%></li>
            <% else %>
              <li><%= link_to 'Login', new_user_session_path %></li>
              <li><%= link_to 'Register', new_user_registration_path %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>